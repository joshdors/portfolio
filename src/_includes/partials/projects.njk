<div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-12">
    {% for project in collections.project reversed %}
    <a href="{{ project.url }}"
        class="group bg-white border shadow-sm hover:shadow rounded-lg overflow-hidden flex flex-col">
        <div class="overflow-hidden">
            <img src="{{ project.data.thumb }}" alt="Thumbnail image for {{ project.data.title }} project"
                class="group-hover:scale-[102.5%] transition duration-300">
        </div>
        <div class="flex flex-col justify-between p-5 flex-1">
            <div>
                <h2 class="mb-2 font-semibold text-lg">{{ project.data.title }}</h2>
                <p class="text-zinc-600 leading-relaxed">{{ project.data.summary }}</p>
            </div>
            <div class="flex flex-row gap-2 flex-wrap mt-4 h-fit flex-none">
                {% for type in project.data.type %}
                <p class="bg-zinc-100 rounded px-2 py-1 text-xs font-medium w-fit text-zinc-600">
                    {{ type }}</p>
                {% endfor %}
            </div>
        </div>
    </a>
    {% endfor %}
</div>