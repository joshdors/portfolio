<section id="projects">
    <div class="flex flex-row items-center mb-8">
        <h2 class="font-bold text-lg">Recent work</h2>
        <div class="flex-1 h-px ml-4 bg-zinc-200"></div>
    </div>
    <div class="flex flex-col gap-y-10">
        {% for project in collections.project reversed %}
        <a href="{{ project.url }}" class="bg-white border shadow-sm hover:shadow-md rounded-md overflow-hidden">
            <img src="{{ project.data.thumb }}" alt="Thumbnail image for {{ project.data.title }} project.">
            <div class="p-4">
                <h3 class="font-semibold">{{ project.data.title }}</h3>
                <p class="mt-1 text-zinc-600">{{ project.data.summary }}</p>
            </div>
        </a>
        {% endfor %}
    </div>
</section>